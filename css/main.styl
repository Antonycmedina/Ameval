footer
  text-align center
  margin 20px 0

@media screen and (min-width: 768px)

  body
    background-image url("../img/background-pc.jpg")
    padding-top 0px

  header
    .menu_bar
      display none

    nav
      margin 0 auto
      height auto
      max-width 100%
      position fixed
      width 100%
      transition width 0s
      -webkit-transition width 0s
      z-index 1

      img, ul
        display inline-block
        vertical-align middle

      img
        height 40px
        margin-left 30px
        width 40px

      ul
        margin-left 38%
        li
          display inline-block
          border-bottom none

  .galeria
    top -58px

    .avanzar
      right 35%
    .pause
      right 45%
    .retroceder
      right 55%

  .about
    height auto
    margin 0 auto
    max-width 1000px
    padding-bottom 180px
    width 95%

    p
      width 70%
      margin 0 auto

  .productos
    background-color rgba(255, 255, 255, 0.5)
    margin 0 auto
    max-width 1000px
    padding-bottom 30px
    text-align center

    h1
      text-align left

    .bigwrapper
      border-left solid 5px #fab800
      border-right solid 5px #fab800
      border-bottom solid 5px #fab800
      display inline-block
      margin-bottom 10px
      vertical-align middle
      width 30%

      .wrapper
        display block

  .contacto
    margin 0 auto
    max-width 1000px
    padding

@media screen and (min-width: 900px)

  header
    nav
      ul
        margin-left 45%

@media screen and (min-width: 1000px)

  header
    nav
      ul
        margin-left 50%
