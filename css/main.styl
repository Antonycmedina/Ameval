rojo = #AE181F

*
  font-family 'Roboto', helvetica, sans-serif
  font-size 16px
  padding 0
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  background #fff
  background-attachment fixed
  background-image url("../img/background.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover

header
  width 100%

  .menu_bar
    background rojo
    display block
    position fixed
    top 0
    width 100%
    z-index 1000

    .bt-menu
      color #fff
      display  block
      font-size 25px
      padding 20px
      overflow hidden
      text-decoration none

      img, .icon-menu
        display inline-block
        vertical-align middle

      img
        height 40px
        width 40px

      .icon-menu
        float right
        font-size: 40px
        font-weight bold

  nav
    background rojo
    height calc(100% - 80px)
    max-width 1000px
    margin 0
    overflow scroll
    margin-top 80px
    position fixed
    width 0%
    transition width 1s
    -webkit-transition width 1s

    img
      display none

    ul
      list-style none
      margin 0

      li
        display block
        border-bottom: 1px solid rgba(255, 255, 255, 0.5)

        :hover
          background #fff
          color #000

        a
          color #fff
          display block
          padding 20px
          text-decoration none
.di
  padding-top 80px
  height 100vh
  width 100%

  h1
    font-family 'Supermercado One'
.galeria
  background-color #fff
  background-attachment fixed
  background-image url("../img/1.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  position relative

  .contenedor-logo
    position absolute
    top 50%
    text-align center
    width 100%
    line-height 25px

  h1, p
    background-color #000
    color #fff
    display inline
    letter-spacing 8px
    padding 5px 8px


  img
    width 100%

  .avanzar
    background rgba(255, 255, 255, 0.5)
    margin 0
    position absolute
    right 38%
    text-align center
    bottom 0px
    width 10%

  .pause
    background rgba(255, 255, 255, 0.5)
    margin 0
    position absolute
    right 48%
    text-align center
    bottom 0px
    width 10%

  .retroceder
    background rgba(255, 255, 255, 0.5)
    margin 0
    position absolute
    right 58%
    text-align center
    bottom 0px
    width 10%

.about
  height 100vh
  margin 0 auto
  text-align justify
  width 80%

  p
    background-color rgba(255, 255, 255, 0.7);
    color #4D4F5E
    padding 5px 10px

.productos
  background-color #fff
  height 100%
  padding-top 70px

  h1
    padding-left 10%

  h2
    letter-spacing 1.5px
  .titulo
    background-color #fab800
    color #fff
    height 30px
    margin 0 0 1px 0
    padding 7px 0 0 5px
    width 100%

  figure#avo
    display block

  .wrapper
    background-color #009798
    display none
    height 100%
    margin 0
    padding 0
    img
      display block
      margin 0 auto
      max-width 100%

    figcaption
      color #4D4F5E
      padding 5px 15px
      text-align justify

.contacto
  height auto
  padding-bottom 80px
  h1
    padding-left 10%

  .info
    padding-left 10%

