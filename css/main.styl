rojo = #AE181F

*
  font-family helvetica
  font-size 16px
  padding 0
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

body
  background #fff
  padding-top 80px

header
  width 100%

  .menu_bar
    background rojo
    display block
    position fixed
    top 0
    width 100%

    .bt-menu
      color #fff
      display  block
      font-size 25px
      padding 20px
      overflow hidden
      text-decoration none

      .icon-menu
        float right
        font-size: 40px
        font-weight bold

  nav
    background rojo
    height calc(100% - 80px)
    max-width 1000px
    margin 0
    overflow scroll
    position fixed
    width 0%
    transition width 2s
    z-index 1000

    ul
      list-style none
      margin 0

      li
        display block
        border-bottom: 1px solid rgba(255, 255, 255, 0.5)

        :hover
          background #fff
          color #000

        a
          color #fff
          display block
          padding 20px
          text-decoration none

@media screen and (min-width: 768px)

  body
    padding-top 0

  header
    .menu_bar
      display none

    nav
      margin 0 auto
      position relative
      width 95%
      transition width 0s

      ul
        text-align center
        li
          display inline-block
          border-bottom none
